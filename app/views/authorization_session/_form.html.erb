<% form_for(@authorization_session, :url => authorization_session_path) do |form| %>  
  <%= form.error_messages %>  
  
  <p>  
    <%= form.label :login %>  
    <%= form.text_field :login %>  
  </p>  
  
  <p>  
    <%= form.label :password %>  
    <%= form.password_field :password %>  
  </p>  
  
  <%= form.submit 'Login' %>  
<% end %>